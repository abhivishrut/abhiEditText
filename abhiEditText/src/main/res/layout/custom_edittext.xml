<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/MobileNumberCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/mobileNumberLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_bg"
                android:paddingHorizontal="4dp"
                android:src="@drawable/ic_numpad" />

            <EditText
                android:id="@+id/customEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blank_edit_text"
                android:gravity="center_vertical"
                android:hint="hint"
                android:imeOptions="actionDone"
                android:paddingVertical="12dp"
                android:paddingStart="6dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_color"
                android:textColorHint="@color/light_gray" />

        </LinearLayout>


        <TextView
            android:id="@+id/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:background="@color/white"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="Heading"
            android:textAllCaps="false"
            android:textColor="@color/black_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/mobileNumberLL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mobileNumberLL" />

    </androidx.constraintlayout.widget.ConstraintLayout>

