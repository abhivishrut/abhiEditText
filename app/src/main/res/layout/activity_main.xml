<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.codewati.abhiedittext.abhiEditText
        android:id="@+id/customInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headingText="Customer's Mobile Number"
        app:hintText="Enter Mobile Number"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:iconSrc="@drawable/ic_numpad"
        app:inputType="number"/>

    <com.codewati.abhiedittext.abhiEditText
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headingText="Customer's Full Name"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        app:hintText="Enter Mobile Number"
        app:iconSrc="@drawable/ic_numpad"
        app:inputType="text"/>

</LinearLayout>